# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,cgi,ini}]
indent_style = space
indent_size = 4

[*.{py,cgi}]
line_length=120
known_first_party=scripts
multi_line_output=3
default_section=THIRDPARTY

[*.{html,css,scss,js,json,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
